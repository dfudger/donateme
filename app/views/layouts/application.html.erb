                                <li><a href="how-it-work.html">Help</a></li>
                                <li class="sep"></li>
                                <li><a href="contact.html">Contact</a></li> -->
                                <!-- <li>This is site in development and not fully functional, but we would love to get your feed back at info@donateme.org</li> -->
                            </ul>
                            <a id="btn-toogle-menu" class="btn-toogle-menu" href="#alternate-menu">
                                <span class="line-bar"></span>
                                <span class="line-bar"></span>
                                <span class="line-bar"></span>
                            </a>
                            <div id="right-menu">
                                <ul class="alternate-menu">
                                    <li><a href="/">Home</a></li>
                                    <!-- <li><a href="all-pages.html">All Pages</a></li> -->
                                    <!-- <li><a href="how-it-work.html">Help</a></li> -->
                                    <li><a href="/about">About</a></li>
                                </ul>
                            </div>
                        </nav>
                        <div class="top-message clearfix">
                            <i class="icon iFolder"></i>
                            <!-- <span class="txt-message">Logged in as </span> -->
                            <i class="icon iX"></i>
                            <div class="clear"><%= current_user.name if user_signed_in? %></div>
                        </div>

                        <i id="sys_btn_toggle_search" class="icon iBtnRed make-right"></i>
                    </div>
                </div>
            </div><!-- end: .wrap-top-menu -->
            <div class="container_12 clearfix">
                <div class="grid_12 header-content">
                    <h1 id="logo">
                        <%= link_to image_tag("logo.png", :alt => "DonateMe"), root_path %>
                    </h1>
                    <ul class="main-nav clearfix">
                        <li><a href="/about">About</a></li>
                        <% if user_signed_in? %>
                            <% # link_to current_user.name, 'admins', :class => "btn btn-red-edit btn-red" %>
                            <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
                        <% else %>
                            <li><%= link_to "Sign up", new_registration_path('user') %></li>
                            <li><%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), :class => "btn btn-blue" %></li>
                        <% end %>
                    </ul>
                </div>
            </div>
        </header><!--end: #header -->

        <% if notice or alert %>
        <div class="row">
            <div class="small-12 columns">
                <p class="notice"><%= notice %></p>
                <p class="alert"><%= alert %></p>
            </div>
        </div>
        <% end %>

        <%= yield %>


