                            <div class="fee-item">
                                <p class="rs lbl">Funded</p>
                                <span class="val"><%= campaign.progress %>%</span>
                            </div>
                            <div class="sep"></div>
                            <div class="fee-item">
                                <p class="rs lbl">Pledged</p>

                                <span class="val"><%= number_to_currency(campaign.pledged/100) %></span>
                            </div>
                            <div class="sep"></div>
