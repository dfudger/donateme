<div class="home-feature-category" style="padding-left:10%; padding-right:10%;">
    <div class="container_12 clearfix" style="width:95%;">
        <% if @featured %>
            <div  class="grid_13 marked-category">
                <div class="wrap-title clearfix">
                    <h2 class="title-mark rs">Staff Pick<span class="fc-orange">:</span></h2>
                </div>
                <div class="box-marked-project project-short">
                    <div class="top-project-info">
                        <div class="content-info-short clearfix" >
                            <a href="<%= campaign_path(@featured) %>" class="thumb-img">
                                <% if @featured.images.size > 0 %>
                                    <div class="crop-img">
                                    <img src="<%= @featured.images.first.url %>" border="0" alt="<%= @featured.images.first.alt %>" >
                                    </div>
                                <% end %>
                            </a>
                            <div class="wrap-short-detail">
                                <h3 class="rs acticle-title"><a class="be-fc-orange" href="<%= campaign_path(@featured) %>"><%= @featured.user.name %></a></h3>
                                <p class="rs tiny-desc">is accepted to <a href="<%= campaign_path(@featured) %>" class="fw-b fc-gray be-fc-orange"><%= @featured.school.name %></a><span class="fw-b fc-gray"></span></p>
                                <p class="rs title-description"><%=raw @featured.essay_html(260) %>
                                <%= link_to "Read more.", campaign_path(@featured), :class => "btn btn-small" %>
                                </p>
                            </div>
                            <p class="rs clearfix comment-view">
                                <span class="sep"></span>
                            </p>
                        </div>
                    </div>

                    <div class="bottom-project-info clearfix" style="max-height:100px;">
                        <div class="project-progress sys_circle_progress" data-percent="<%= @featured.progress %>">
                            <div class="sys_holder_sector"></div>
                        </div>
                        <div class="group-fee clearfix">
                            <div class="fee-item">
                                <p class="rs lbl">Backers</p>
                                <span class="val"><%= @featured.backers %></span>
                            </div>
                            <div class="sep"></div>
                            <div class="fee-item">
                                <p class="rs lbl">Pledged</p>
                                <span class="val"><%= number_to_currency(@featured.pledged/100) %></span>
                            </div>
                            <div class="sep"></div>
                            <div class="fee-item">
                                <p class="rs lbl">Days Left</p>
                                <span class="val"><%= @featured.left %></span>
                            </div>
                        </div>
                        <div class="clear"></div>
                    </div>
                </div>
            </div><!--end: .marked-category -->
            <div class="clear"></div>
        </div>
    </div><!--end: .home-feature-category -->
<% end %>

