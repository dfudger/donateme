    <div class="layout-2cols">
        <div class="content grid_8">
            <div class="project-detail">
                <h1 class="rs project-title">
                    <strong><%= @campaign.user.name %></strong>
                    <br /><%= @campaign.school.name %>
                    <br />Goal: <%= number_to_currency(@campaign.goal/100, :precision => 0) %></h1>

                <div class="project-short big-thumb">
                    <div class="top-project-info">
                        <div class="content-info-short clearfix">
                            <div class="thumb-img">
                                <div class="rslides_container">
                                  <ul class="rslides" id="slider1">
                                    <li><iframe width="552" height="411" src="<%= @campaign.videos.first.embed %>"
                                        frameborder="0" allowfullscreen></iframe></li>

                                    <% @campaign.images.each do |image| %>
                                      <li><img src="<%= image.url %>" alt=""></li>
                                    <% end %>
                                  </ul>
                                </div>
                            </div>
                        </div>
                    </div><!--end: .top-project-info -->
                    <div class="bottom-project-info clearfix">
                        <div class="project-progress sys_circle_progress" data-percent="<%= @campaign.progress %>">
                            <div class="sys_holder_sector"></div>
                        </div>
                        <div class="group-fee clearfix">
                            <div class="fee-item">
                                <p class="rs lbl">Backers</p>
                                <span class="val"><%= @campaign.backers %></span>
                            </div>
                            <div class="sep"></div>
                            <div class="fee-item">
                                <p class="rs lbl">Pledged</p>
                                <span class="val"><%= number_to_currency(@campaign.pledged/100, :precision => 0) %></span>
                            </div>
                            <div class="sep"></div>
                            <div class="fee-item">
                                <p class="rs lbl">Days Left</p>
                                <span class="val"><%= @campaign.left %></span>
                            </div>
                        </div>
                        <div class="clear"></div>
                    </div>
                </div>
                <div class="project-tab-detail tabbable accordion">
                    <ul class="nav nav-tabs clearfix">
                      <li class="active"><a href="#"><strong>About</strong> <%= @campaign.user.name %></a></li>
                      <li><a href="#" class="be-fc-orange"></a></li>
                      <li><a href="#" class="be-fc-orange"></a></li>
                      <li><a href="#" class="be-fc-orange"></a></li>
                    </ul>
                    <div class="tab-content">
                        <div>
                            <h3 class="rs alternate-tab accordion-label"><strong>About</strong> <%= @campaign.user.name %></h3>
                            <div class="tab-pane active accordion-content">
                                <div class="editor-content">
                                    <%=raw @campaign.essay_html() %>
                                </div>
                            </div><!--end: .tab-pane(About) -->
                        </div>
                    </div>
                </div><!--end: .project-tab-detail -->
            </div>
        </div><!--end: .content -->
        <div class="sidebar grid_4">
            <div class="project-runtime">
                <div class="box-gray">
                    <div class="project-date clearfix">
                        <i class="icon iCalendar"></i>
                        <span class="val"><span class="fw-b">Launched: </span><%= l @campaign.start, format: :pretty_date %></span>
                    </div>
                    <div class="project-date clearfix">
                        <i class="icon iClock"></i>
                        <span class="val"><span class="fw-b">Funding ends: </span><%= l @campaign.end, format: :pretty_date %></span>
                    </div>
                    <form  method="get"></form>
                    <a href="<%= new_campaign_donation_path(@campaign) %>" class="btn btn-green btn-buck-project" name="student">
                         <span class="lbl">Donate to this Student</span>
                        <span class="desc">$2 minimum</span>
                    </a>
                </div>
            </div><!--end: .project-runtime -->
        </div><!--end: .sidebar -->
        <div class="clear"></div>
    </div>
